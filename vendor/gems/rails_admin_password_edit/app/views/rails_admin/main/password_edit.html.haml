= form_tag(nil, method: "put", multipart: true, class: "form-horizontal denser") do |form|
  = content_tag(:div, class: "form-group control-group password_type password_field #{'error' if @edited_object.errors.present? && @edited_object.errors.has_key?(:password)}") do
    = label('password', 'Password', class: 'col-sm-2 control-label')
    = content_tag(:div, class: 'col-sm-10 controls') do
      = password_field_tag 'password', nil, class: 'form-control'
      = content_tag(:span, @edited_object.errors.get(:password).to_sentence, class: 'help-inline text-danger') if @edited_object.errors.present? && @edited_object.errors.has_key?(:password)

  = content_tag(:div, class: "form-group control-group password_type password_confirmation_field #{'error' if @edited_object.errors.present? && @edited_object.errors.has_key?(:password_confirmation)}") do
    = label('password_confirmation', 'Password confirmation', class: 'col-sm-2 control-label')
    = content_tag(:div, class: 'col-sm-10 controls') do
      = password_field_tag 'password_confirmation', nil, class: 'form-control'
      = content_tag(:span, @edited_object.errors.get(:password_confirmation).to_sentence, class: 'help-inline text-danger') if @edited_object.errors.present? && @edited_object.errors.has_key?(:password_confirmation)

  = render(partial: 'rails_admin/main/submit_buttons')
